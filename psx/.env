# 应用配置
APP_NAME=URAK Blog API
APP_VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据存储配置
DOCS_DIR=../docs
CATEGORIES_DIR=../docs/categories
CONTENT_DIR=../docs/content
BLOG_DATA_FILE=../docs/blog-data.json

# 缓存配置
CACHE_TTL=60
CACHE_ENABLED=true

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s